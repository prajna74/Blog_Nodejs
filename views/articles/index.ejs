<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
    <title>Blog</title>
</head>
<body>
    <div class="container">
    <h1 class="mb-4 ml-4">Blogs</h1>
    <a href="/articles/new" class="btn btn-success mb-4">New article</a>
    <%  for(var i=0;i<articles.length;i++) { %>
          <div class="card mb-4">
      <div class="card-header">
        <h2><%= articles[i].title %></h2>
     </div>
  <div class="card-body">
    <p class="text disabled"><%= articles[i].createdAt.toLocaleString() %></p>
    <h6 class="card-text"><%= articles[i].description %></h6>
    <a href="articles/<%= articles[i].id%>" class="btn btn-primary mt-4">Read More</a>
    <a href="articles/edit/<%= articles[i].id%>" class="btn btn-info mt-4 ml-4">Edit</a>
    <form action="articles/<%= articles[i].id%>?_method=DELETE" method="post" class="d-inline">
    <button type="submit" class="btn btn-danger mt-4 ml-4">Delete</button>
    </form>
  </div>
</div>
    <% } %>
    </div>
</body>
</html>